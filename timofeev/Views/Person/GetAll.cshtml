@model List<timofeev.Models.Person>

@{
    ViewBag.Title = "Физические лица";
}

<div>
    <h4>@ViewBag.Title</h4>
    <div>@ViewBag.Message</div>
    <table class="table">
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Паспорт</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (timofeev.Models.Person p in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(model => p.Firstname)
            </td>
            <td>
                @Html.DisplayFor(model => p.Name)
            </td>
            <td>
                @Html.DisplayFor(model => p.Secondname)
            </td>
            <td>
                @Html.DisplayFor(model => p.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(model => p.Email)
            </td>
            <td>
                @Html.DisplayFor(model => p.PassportInfo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = p.Id })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = p.Id })
            </td>
        </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Add", "Add")
</p>
<p>
    @Html.ActionLink("Back to Main", "Index", "Home")
</p>