@model List<timofeev.Models.ConfectioneryCategory>

@{
    ViewBag.Title = "Категории кондитерских изделий";
}

<div>
    <h4>@ViewBag.Title</h4>
    <div>@ViewBag.Message</div>
    <table class="table">
        <tr>
            <th>Категория</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (timofeev.Models.ConfectioneryCategory cc in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => cc.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = cc.Id })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = cc.Id })
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Add", "Add")
</p>
<p>
    @Html.ActionLink("Back to Main", "Index", "Home")
</p>